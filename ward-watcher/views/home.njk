{<!-- Extends the layout from content-page -->
{% extends 'content-page.njk' %}
<!-- Set the page title inside the pageTitle block -->
{% block pageTitle %}St. Mungos Ward Watcher - Welcome{% endblock %}
<!-- Breadcrumb goes inside the beforeContent block -->
{% block beforeContent %}
{% endblock %}
<!-- Page content goes inside the content block -->
{% block content %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">
        <h2>
            Welcome {{ user.name.given}} {{ user.name.family }}
            <span class="nhsuk-caption-xl nhsuk-caption--bottom">Ward Watcher</span>
        </h2>
        <hr class="nhsuk-u-margin-top-1 nhsuk-u-margin-bottom-5" />
        <h3>
            Encounters by Organization/Service Provider
        </h3>
        <ul class="nhsuk-grid-row nhsuk-card-group">
            {% for total in totals %}
                <li class="nhsuk-grid-column-one-third nhsuk-card-group__item">
                    <div class="nhsuk-card nhsuk-card--clickable">
                        <div class="nhsuk-card__content">
                            <p class="nhsuk-heading-l nhsuk-u-font-size-19 nhsuk-u-margin-bottom-1">{{ total.name }}</p>
                            <p class="nhsuk-heading-xl nhsuk-u-font-size-64 nhsuk-u-margin-bottom-1">{{ total.total }}<span class="nhsuk-u-visually-hidden">{{ total.name }}</span></p>
                            <a href="service-providers/{{total.id}}/sites" class="nhsuk-card__link nhsuk-u-font-weight-normal nhsuk-u-font-size-14 nhsuk-link--no-visited-state">View Encounters</a>
                        </div>
                    </div>
                </li>   
            {% endfor %}               
        </ul>
        <hr class="nhsuk-u-margin-top-1 nhsuk-u-margin-bottom-5">
        <div class="nhsuk-grid-row">
            <div class="nhsuk-grid-column-full">
                <p class="nhsuk-u-margin-bottom-0">Visit the <a href="https:///">FHIR Appliance</a> website for documentation, guidance and examples.</p>
            </div>
        </div>
    </div>
  </div>
{% endblock %}
