<!-- Extends the layout from content-page -->
{% extends 'content-page.njk' %}
<!-- Set the page title inside the pageTitle block -->
{% block pageTitle %}FHIR Up - Login{% endblock %}
<!-- Breadcrumb goes inside the beforeContent block -->
{% block beforeContent %}
{% endblock %}
<!-- Page content goes inside the content block -->
{% block content %}
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <form method="post">
            <input type="hidden" id="action" name="action" value="do"/>
            {% if errors %}
            <div class="nhsuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1">
                <h2 class="nhsuk-error-summary__title" id="error-summary-title">There is a problem</h2>
                <div class="nhsuk-error-summary__body">
                    <ul class="nhsuk-list nhsuk-error-summary__list">
                        {% for key, value in errors %}
                        <li>
                            <a href="#{{ key }}">{{ value }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            {% endif %}
            <fieldset class="nhsuk-fieldset">
                <legend class="nhsuk-fieldset__legend nhsuk-fieldset__legend--l">
                    <h1 class="nhsuk-fieldset__heading">Login</h1>
                    <span class="nhsuk-hint">Enter your registered email address and password to login</span>
                </legend>
                {% if errors["username"] %}
                <div class="nhsuk-form-group nhsuk-form-group--error">
                    <label class="nhsuk-label" for="username">Email address</label>
                    <span class="nhsuk-error-message" id="username-error"
                        ><span class="nhsuk-u-visually-hidden">Error: </span>{{ errors["username"] }}</span
                    >
                    <input class="nhsuk-input nhsuk-input--error" id="username" autocomplete="off" name="username" type="text" />
                </div>
                {% else %}
                <div class="nhsuk-form-group">
                    <label class="nhsuk-label" for="username">Email address</label>
                    <input class="nhsuk-input" id="username" autocomplete="off" name="username" type="text" />
                </div>
                {% endif %} 
                {% if errors["password"] %}
                <div class="nhsuk-form-group nhsuk-form-group--error">
                    <label class="nhsuk-label" for="password">Password</label>
                    <span class="nhsuk-error-message" id="password-error"
                        ><span class="nhsuk-u-visually-hidden">Error: </span>{{ errors["password"] }}</span
                    >
                    <input class="nhsuk-input nhsuk-input--error" id="password" autocomplete="off" name="password" type="password" />
                </div>
                {% else %}
                <div class="nhsuk-form-group">
                    <label class="nhsuk-label" for="password">Password</label>
                    <input class="nhsuk-input" id="password" autocomplete="off" name="password" type="password" />
                </div>
                {% endif %}
            </fieldset>
            <button class="nhsuk-button" type="submit">Login</button>
        </form>
    </div>
</div>
{% endblock %}